<%- include("../partials/header.ejs") %>
<div class="container mt-5">
  <h1 style="text-align: center">Add New Comment </h1>
  <div class="row">
    <div style="width: 30%; margin: 25px auto;">
      <form action="/plants/<%= plant._id %>/comments" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="comment[text]" placeholder="Your comment">
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-success btn-block">Submit!</button>
        </div>
      </form>
      <div class="mt-3 text-muted text-center">
        <small>
          <a href="/plants">Go back</a>
        </small>
      </div>
    </div>
  </div>
  <%- include("../partials/footer.ejs") %>